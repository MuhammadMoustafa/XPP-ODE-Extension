{
	"name": "xpp",
	"displayName": "XPP",
	"description": "Provides XPP \"ode, inc\" syntax and functionalities for VSCode",
	"version": "0.3.0",
	"publisher": "MuhammadMoustafa",
	"author": {
		"name": "Muhammad Moustafa",
		"email": "muhammadmoustafa22@gmail.com"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/MuhammadMoustafa/XPP-ODE-Extension",
		"home": "https://github.com/MuhammadMoustafa/XPP-ODE-Extension/blob/master/README.md"
	},
	"icon": "images/icon.png",
	"main": "./out/extension.js",
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"test": "mocha --require ts-node/register --ui tdd src/test/**/*.test.ts"
	},
	"devDependencies": {
		"@types/mocha": "^10.0.10",
		"@types/node": "^12.20.55",
		"@types/vscode": "^1.22.0",
		"mocha": "^11.1.0",
		"ts-node": "^10.9.2",
		"typescript": "^4.0.0"
	},
	"engines": {
		"vscode": "^1.82.0"
	},
	"activationEvents": [
		"onStartupFinished"
	],
	"categories": [
		"Programming Languages"
	],
	"contributes": {
		"languages": [
			{
				"id": "xpp",
				"aliases": [
					"XPP ODE",
					"XPP",
					"XPPAUT"
				],
				"extensions": [
					".ode",
					".inc"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "xpp",
				"scopeName": "source.xpp",
				"path": "./syntaxes/xpp.tmLanguage.json"
			}
		],
		"commands": [
			{
				"command": "xpp.runOdeFile",
				"title": "Run ODE File",
				"category": "XPP-ODE",
				"icon": "$(play)"
			},
			{
				"command": "xpp.extractVariable",
				"title": "XPP: Extract to Variable"
			},
			{
				"command": "xpp.toggleComment",
				"title": "Toggle Comment",
				"category": "XPP-ODE"
			}
		],
		"menus": {
			"editor/title": [
				{
					"command": "xpp.runOdeFile",
					"group": "navigation",
					"when": "resourceLangId == xpp"
				}
			],
				"editor/context": [
				{
					"when": "editorHasSelection && editorLangId == xpp",
					"command": "xpp.extractVariable",
					"group": "1_modification"
				}
			]
		},
		"configuration": {
			"title": "XPP-ODE",
			"properties": {
				"xpp-ode.runCommand": {
					"type": "string",
					"default": "xppaut",
					"description": "Command to run XPP-ODE files. Default is 'xppaut'"
				}
			}
		},
		"keybindings": [
			{
				"command": "xpp.toggleComment",
				"key": "ctrl+/",
				"when": "editorTextFocus && editorLangId == xpp"
			}
		]
	}
}
